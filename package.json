{
  "name": "share",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite --mode development",
    "ok": "npm run dev & npm run dev:server",
    "build": "vite build --mode production",
    "preview": "vite preview",
    "dev:server": "cross-env NODE_ENV=development node server/index.js",
    "prod:server": "cross-env NODE_ENV=production node server/index.js",
    "start": "cross-env NODE_ENV=production node server/index.js",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs --fix --ignore-path .gitignore",
    "deploy": "node scripts/deploy.js",
    "pm2:start": "pm2 start ecosystem.config.cjs",
    "pm2:stop": "pm2 stop ecosystem.config.cjs",
    "pm2:restart": "pm2 restart ecosystem.config.cjs"
  },
  "dependencies": {
    "axios": "^1.6.7",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "mysql2": "^3.12.0",
    "vue": "^3.3.4",
    "vue-router": "^4.5.0",
    "pm2": "^5.3.0"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^4.2.3",
    "concurrently": "^8.2.2",
    "eslint": "^8.56.0",
    "eslint-plugin-vue": "^9.21.1",
    "vite": "^4.4.5",
    "cross-env": "^7.0.3"
  }
}
